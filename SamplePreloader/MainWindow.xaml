<Window x:Class="SamplePreloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamplePreloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Pre-loader Control Demo" Height="28" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="16"/>

        <local:PreLoaderControl Grid.Row="1" Height="32" Width="32" />

        <local:PreloaderCircle Grid.Row="2" HorizontalAlignment="Stretch" />
        
        <local:PreloaderCircleBreath Grid.Row="3" HorizontalAlignment="Stretch" />
    </Grid>
</Window>
